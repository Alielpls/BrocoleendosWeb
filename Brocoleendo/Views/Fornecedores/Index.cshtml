@using Brocoleendo.ViewModel;

@model List<Fornecedor>

<div style="background-color:white">
    <div class="row" style="padding:10px">
        <div class="col-xs-1 col-md-1 col-sm-1">
            <a asp-controller="Home" asp-action="Index" class="fa fa-2x fa-chevron-left text-dark nav-link" style="padding-left:10px"></a>
        </div>

        <div class="col-xs-10 col-md-10 col-sm-10">
            <p style="text-align:center; font-size:25px;" class="form-control"> <b>@ViewData["Title"]</b></p>
        </div>
    </div>

    <div style="padding-top:0%">
        <div class="row">
            @{
                int i = 0;
                foreach (var item in Model)
                {
                    if (i % 2 == 0)
                    {
                        <div class="col-xs-1 col-md-1 col-sm-1"></div>
                    }
                    <div class="col-xs-5 col-md-5 col-sm-5">
                        <div class="ctt-bloco row">
                            <div class="col-xs-1 col-md-1 col-sm-1"></div>
                            <p class="col-xs-2 col-md-2 col-sm-2" style="padding-top:10px;">
                                <i class="fa fa-2x fa-user-o"></i>
                            </p>
                            <p class="col-xs-5 col-md-5 col-sm-5">
                                <b>@item.DS_Fornecedor</b>
                                <br />
                                <i>@item.DS_Representante</i>
                            </p>
                            <p class="col-xs-3 col-md-3 col-sm-3" style="padding-top:10px;">
                                <a class="details" href="#" data-toggle="modal" data-target="#myModal" data-id="@item.ID_Fornecedor">
                                    <i class="fa fa-2x fa-info-circle"></i>
                                </a>
                            </p>
                        </div>
                    </div>
                    if (i % 2 == 1)
                    {
                        <div class="col-xs-1 col-md-1 col-sm-1"></div>
                    }
                    i++;

                }


            }

        </div>
    </div>
</div>

<div class="modal modal-fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="modalContent"></div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $(".details").click(function () {
            var id = $(this).attr("data-id");
            $("#modalContent").load("/Fornecedores/Details/" + id,
                function () {
                    $("#myModal").modal("show");
                });
        });
    });
</script>