@using Brocoleendo.ViewModel
@model VendaViewModel

<div class="board-basico">
    <div class="row" style="padding:10px">
        <div class="col-xs-1 col-md-1 col-sm-1">
            <a asp-controller="Home" asp-action="Index" class="fa fa-2x fa-chevron-left text-dark nav-link" style="padding-left:10px"></a>
        </div>

        <input id="deletItem" style="display:none;" />

        <div class="col-xs-10 col-md-10 col-sm-10">
            <p style="text-align:center; font-size:25px;" class="form-control"> <b>@ViewData["Title"]</b></p>
        </div>

    </div>

    <div id="inputsDiv" class="row">
        <div class="col-xs-1 col-sm-1 col-md-1">
            <label for="venda_ID_VENDA" class="form-label">Cód. Venda</label>
            @Html.TextBoxFor(m => m.venda.ID_VENDA, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="col-xs-4 col-sm-2 col-md-2">
            <label for="ddlPagamentos" class="form-label">Forma de pagamento</label>
            <select id="ddlPagamentos" class="form-control">
                <option value="Pix">Pix</option>
                <option value="Dinheiro">Dinheiro</option>
                <option value="Cartão - debito">Cartão - debito</option>
                <option value="Cartão - Crédito">Cartão - Crédito</option>
            </select>
        </div>

        <div class="col-xs-4 col-sm-3 col-md-3">

            <label for="ProdutoSelecionadoID" class="form-label"> Produto</label>

            <select id="ProdutoSelecionadoID" class="form-control">
                <option value="">Selecione um produto</option>
                @foreach (var produto in Model.Produtos)
                {
                    <option value="@produto.ID_PRODUTO" data-saldo="@produto.SALDO.ToString().Replace(',', '.')">@produto.DS_PRODUTO</option>
                }
            </select>

        </div>

        <div class="col-xs-4 col-sm-2 col-md-2">
            <label for="saldoProduto" class="form-label">Saldo do produto</label>
            <input type="text" readonly="readonly" id="saldoProduto" class="form-control" />
        </div>
        <div class="col-xs-4 col-sm-2 col-md-2">
            <label for="kgQuantidade" class="form-label">Quantidade Kg</label>
            <input id="kgQuantidade" type="number" step="0.010" class="form-control" style="width:60%;" />
        </div>

        <div class="col-xs-4 col-sm-2 col-md-2">
            <a id="plusVenda" class="btn btn-success" style="width:60%; margin-top:25px"><i class="fa fa-plus"></i></a>
            <a id="plusProduto" class="btn btn-success" style="width:60%; margin-top:25px; display:none"><i class="fa fa-plus"></i></a>
        </div>

    </div>

    <div class="ctt-bloco" style="margin-top:25px;" id="produtosDiv">
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/Venda/index.js"></script>
